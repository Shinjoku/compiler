<UserControl x:Class="Compiler.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Compiler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Text Editor" 
               FontSize="22" FontWeight="Bold" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Padding="5" Background="LightGray" AcceptsTab="True"
                 Name="Page" AcceptsReturn="True" VerticalContentAlignment="Top" TabIndex="1"
                 Text="{Binding Path=FileContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"/>
    </Grid>
</UserControl>
