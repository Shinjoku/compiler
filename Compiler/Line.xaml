<UserControl x:Class="Compiler.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Compiler"
             mc:Ignorable="d" 
             d:DesignHeight="25" MinWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" BorderThickness="0" Background="DimGray" Click="ActivateBreakpoint"/>
        <TextBlock Grid.Column="1" Background="DimGray" Text="{Binding Index}"/>
        <TextBox Grid.Column="2" BorderThickness="0" Background="LightGray"  Text="{Binding Text}"/>
    </Grid>
</UserControl>
